                            }
                        ],
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ]
                    },
                    "entity": [
                        {
                            "field": "name",
                            "label": "Account name",
                            "type": "text",
                            "required": true,
                            "help": "Enter a unique name for this account.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 50,
                                    "errorMsg": "Length of Account name should be between 1 and 50"
                                },
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }
                            ]
                        },
                        {
                            "field": "pihole_host",
                            "label": "Pi-hole host",
                            "type": "text",
                            "required": true,
                            "help": "Enter the FQDN/IP for the Pi-holeÂ® server.",
                            "options": {
                                "placeholder": "IP/FQDN"
                            },
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 200,
                                    "errorMsg": "Length of hostname should be between 1 and 200"
                                }
                            ]
                        },
                        {
                            "field": "api_pass",
                            "label": "API Passphrase",
                            "type": "text",
                            "encrypted": true,
                            "required": true,
                            "help": "Enter the API Passphrase for this account.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 8192,
                                    "errorMsg": "Length of API Passphrase should be between 1 and 8192"
                                }
                            ]
                        },
                        {
                            "field": "api_port",
                            "label": "API port",
                            "type": "text",
                            "required": false,
                            "help": "(Optional) Enter the port number used for the API.",
                            "options": {
                                "placeholder": "Optional"
                            },
                            "validators": [
                                {
                                    "type": "number",
                                    "range": [
                                        1,
                                        65535
                                    ],
                                    "errorMsg": "Select a valid port number"
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "proxy",
                    "title": "Proxy",
                    "entity": [
                        {
                            "field": "proxy_enabled",
                            "label": "Enable",
                            "type": "checkbox"
                        },
                        {
                            "field": "proxy_type",
                            "label": "Proxy Type",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "http",
                                        "value": "http"
                                    },
                                    {
                                        "label": "socks4",
                                        "value": "socks4"
                                    },
                                    {
                                        "label": "socks5",
                                        "value": "socks5"
                                    }
                                ]
                            },
                            "defaultValue": "http"
