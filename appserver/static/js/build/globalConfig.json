                {
                    "name": "account",
                    "title": "Account",
                    "table": {
                        "header": [
                            {
                                "field": "name",
                                "label": "Account name"
                            },
                            {
                                "field": "pihole_host",
                                "label": "Host"
                            },
                            {
                                "field": "api_port",
